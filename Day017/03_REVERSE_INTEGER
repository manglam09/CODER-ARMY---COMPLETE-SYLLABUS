class Solution {
public:
    int reverse(int x) {

        
        int rev=0;
        while(x!=0){
            int digit = x%10;
            if(rev>INT_MAX/10 || rev<INT_MIN/10){         //check before multipliying by qo that is it in the range or not 
                                                          //multiplying by ten tom greater range element can cause overflow
                return 0;
            }
            rev=rev*10+digit;
            x=x/10;
        }
        return rev;
    }
};
